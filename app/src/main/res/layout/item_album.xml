<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/thumb_margin">

    <!-- Thumb (fill all parent space) -->
    <ImageView
        android:id="@+id/item_image_thumb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/thumb_size"
        android:contentDescription="@string/thumb"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title bottom / centered -->
    <TextView
        android:id="@+id/item_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorThumbTextBackground"
        android:padding="@dimen/message_textSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
